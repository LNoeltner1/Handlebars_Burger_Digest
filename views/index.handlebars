<div class="row">
    <div class="col-sm-5 col-md-5 col-lg-5"></div>
    <div class="col-sm-2 col-md-2 col-lg-2">
        <h1>Burgers!</h1>
    </div>
    <div class="col-sm-5 col-md-5 col-lg-5"></div>
</div>
<hr>
<div class="row">
    <div class="col-sm-1 col-md-1 col-lg-1"></div>
    <div class="col-sm-5 col-md-5 col-lg-5">
        <h2>Burgers that have been eaten!</h2>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-sm-5 col-md-5 col lg-5">

        <h2>Burgers that haven't been eaten!</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devour=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
    <div class="col-sm-1 col-md-1 col-lg-1"></div>
</div>
<hr>
<div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4"></div>
    <div class="col-sm-4 col-md-4 col-lg-4">
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
                <label for="devoured">Have you inhaled this Burger before?</label><br>
                <input type="radio" name="devoured" value="1" checked> Never tried it!<br>
                <input type="radio" name="devoured" value="0"> I ate the whole thing!
            </div>

            <button type="submit">Add burger!</button>
        </form>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4"></div>
</div>